@model WebApplication2.Models.NewsModel
@{
    ViewBag.Title = "Index";
}

<h2>All News</h2>

<table class="table">
    
    <tr>
        <th>
            Author
        </th>
        <th>
            Title
        </th>
        <th>
            News
        </th>
        <th></th>
    </tr>

    @foreach (var item in MvcApplication.optionList)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Author)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.TextAreaFor(modelItem => item.News)
            </td>
        </tr>
    }



</table>
